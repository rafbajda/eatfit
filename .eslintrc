{
    "env": {
        "commonjs": true,
        "node": true,
        "mocha": true,
        "jest": true
    },
    "extends": [
        "airbnb",
        "prettier",
        "prettier/react"
    ],
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "none",
                "singleQuote": true,
                "printWidth": 100
            }
        ]
    },
    "globals": {
        "document": true,
        "window": true,
        "XMLHttpRequest": true
    },
    "plugins": [
        "prettier"
    ]
}